{
	"version": "2.0.0",
	"tasks": [
	  {
		"type": "shell",
		"label": "g++ build active file",
		"command": "/usr/bin/g++",
		"args": ["-g", "${workspaceFolder}/source_files/*.cpp", "${workspaceFolder}/header_files/*.h", "-o", "${fileDirname}/${fileBasenameNoExtension}", "-lX11",  "-lGL", "-lpthread", "-lpng"],
		"options": {
		  "cwd": "/usr/bin"
		},
		"problemMatcher": ["$gcc"],
		"group": {
		  "kind": "build",
		  "isDefault": true
		}
	  }
	]
  }